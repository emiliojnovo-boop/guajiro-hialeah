<script>
function handleYoutubeUrl() {
    const url = document.getElementById('youtubeUrl').value.trim();
    if (!url) return alert('Pega una URL');
    const regex = /(?:youtube\.com\/watch\?v=|youtu\.be\/)([\w-]+)/;
    const match = url.match(regex);
    if (!match) return alert('URL no v√°lida');
    const id = match[1];
    document.getElementById('videoLink').href = url;
    document.getElementById('downsubLink').href = `https://downsub.com/?url=${encodeURIComponent(url)}`;
    document.getElementById('transcriptLink').href = `https://youtubetranscript.com/?v=${id}`;
    document.getElementById('helperResult').classList.add('show');
}
document.addEventListener('DOMContentLoaded', () => {
    const input = document.getElementById('youtubeUrl');
    if (input) input.addEventListener('keypress', e => { if (e.key === 'Enter') handleYoutubeUrl(); });
});
if ('serviceWorker' in navigator) navigator.serviceWorker.register('sw.js');
</script>
